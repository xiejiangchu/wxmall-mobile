.address-list {
  height: 100%;
}

.address-list .weui-media-box {
  padding-right: 35px;
}

.address-list .edit {
  position: absolute;
  top: 50%;
  right: 15px;
  width: 20px;
  height: 20px;
  -webkit-transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);
}

.address-list .edit .icon {
  width: 20px;
  height: 20px;
}

addr-icon {
  width: 20px;
  height: 20px;
}

.address-container {
  margin-bottom: 20px;
}

.btn-plus {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: #479de6;
  color: white;
}
