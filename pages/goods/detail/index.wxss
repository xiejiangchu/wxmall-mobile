.swiper_box {
  width: 100%;
  height: 320px;
}

.swiper_box .slide-image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

.item-no {
  background: white;
  color: darkorange;
  margin-top: 20rpx;
  padding: 20rpx;
}

.btn-container {
  padding: 20rpx;
}

.item-summary {
  background: white;
  color: black;
  margin-top: 20rpx;
  padding: 20rpx;
}

.name-container {
  padding: 20rpx;
  border-top: 1px solid #479de6;
  border-bottom: 1px solid #479de6;
}

.market text {
  text-decoration: line-through;
  font-size: 12px;
}

.shop text {
  font-size: 20px;
}

.sell text {
  font-size: 12px;
}

.line-seprate {
  height: 1px;
  background: #479de6;
  width: 100%;
}

.item-summary-content {
  padding: 5rpx 40rpx;
  padding-bottom: 60rpx;
}

.item-description {
  background: white;
  color: black;
  margin-top: 20rpx;
  padding: 20rpx;
}

.btn-wrap {
  display: inline-block;
  line-height: 1.5;
  padding: 10rpx 30rpx;
  margin: 10rpx;
  font-size: 30rpx;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  white-space: nowrap;
  background: white;
}

.active {
  background: #479de6;
}

.active text {
  color: white;
}

.btn-plus {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #479de6;
  color: white;
}

.operation-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 16px;
  width: 100%;
  padding: 4px;
  border-top: 1px solid #999;
  text-align: center;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.operation-container .operation-container-item {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #479de6;
}

.operation-container-item:nth-child(2) {
  border-left: none;
  border-right: none;
}

.operation-container-item image {
  max-height: 36px;
  max-width: 36px;
}

.operation-container-item input {
  width: 80px;
  height: 36px;
  text-align: center;
}
