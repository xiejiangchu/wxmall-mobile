<import src="../common/prompt.wxml" />
<template name="list-index">
  <template is="prompt" data="{{ prompt }}" />
  <view class="scroll-list">
    <view class="weui-panel weui-panel_access" wx:if="{{ !!paginate.list.length }}">
      <view class="weui-panel__bd">
        <navigator class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" wx:for="{{ paginate.list }}" wx:key="" bindtap="navigateTo" data-id="{{ item.id }}">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="{{ item.src }}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{ item.name }}</view>
            <view class="weui-media-box__desc">
              <text class="text-orangered">{{ item.summary }}</text>
            </view>
            <view class="text-unit-container " wx:for="{{ item.itemSpecList }}" wx:for-item="itemSpec" wx:key="id">
              <text class='text-unit-shop'>
                <text class="text-unit-market">{{ itemSpec.market_price }}/{{itemSpec.unit_sell}}{{itemSpec.unit}}</text>
                <text class='color-red'>{{ itemSpec.shop_price }}/{{itemSpec.unit_sell}}{{itemSpec.unit}}</text>
                <text class='color-primary'>销量:{{itemSpec.sale_num}}</text>
              </text>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
</template>