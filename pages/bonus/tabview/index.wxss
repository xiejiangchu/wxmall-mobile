.stv-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}

.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  background: white;
  color: #666;
}

.stv-container .tab-bar .tab-active {
  color: #2d80ff;
}

.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}

.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 6rpx;
  background-color: #2d80ff;
}

.stv-container .scroll-view {
  position: relative;
  width: 100%;
  height: 100%;
  background: #e7eaef;
}

.stv-container .scroll-view .scroll-view-wrapper {
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
}

.stv-container .scroll-view .scroll-view-wrapper .one-scene {
  height: 100%;
}

.stamp-container {
  padding: 0 6px;
  margin: 10px 0;
  list-style: none;
  position: relative;
  overflow: hidden;
  background: radial-gradient(rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, 0) 5px, #479de6 5px);
  background-size: 15px 12px;
  background-position: -6px 8px;
}

.stamp {
  display: flex;
  padding: 15rpx 0rpx;
  margin: 0;
  list-style: none;
  flex-direction: row;
  position: relative;
  overflow: hidden;
  background: #479de6;
}

.stamp .i {
  position: absolute;
  left: -10%;
  top: 45px;
  height: 100%;
  width: 120%;
  background-color: rgba(255, 255, 255, 0.15);
  transform: rotate(-30deg);
}

.stamp .par {
  flex: 4;
  display: flex;
  flex-direction: column;
  border-right: 2px dashed rgba(255, 255, 255, 0.8);
  text-align: left;
}

.stamp .par .place {
  color: #fff;
  font-size: 30rpx;
  margin-left: 30rpx;
}

.stamp .par .content {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: baseline;
  color: #fff;
}

.stamp .par .content .sign {
  font-size: 30rpx;
  text-align: right;
}

.stamp .par .content .money {
  font-size: 60rpx;
  margin: 0 16rpx;
  text-align: center;
}

.stamp .par .content .name {
  font-size: 30rpx;
  text-align: left;
}

.stamp .par .note {
  color: #fff;
  font-size: 30rpx;
  margin-left: 30rpx;
}

.stamp .copy {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  vertical-align: text-bottom;
  font-size: 30px;
  color: rgb(255, 255, 255);
  text-align: center;
  line-height: initial;
}

.stamp .copy .name {
  flex: 1 1 auto;
  font-size: 50rpx;
  margin-top: 15rpx;
}

.stamp .copy .time {
  flex: 0.5 0.5 auto;
  font-size: 25rpx;
  margin-top: 15rpx;
}

