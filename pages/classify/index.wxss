page {
  background: #f5f5f5;
  height: 100%;
  width: 100%;
}

.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
  padding-top: 38px;
}

.scroll-view_H {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  width: 100%;
  height: 36px;
  line-height: 36px;
  font-size: 16px;
  overflow: scroll;
  flex-wrap: nowrap;
  white-space: nowrap;
  align-content: center;
  justify-content: center;
  background: white;
  border-top: 1px solid rgba(255, 69, 0, 0.6);
  border-bottom: 1px solid rgba(255, 69, 0, 0.6);
  z-index: 10;
}

.scroll-view_H .scroll-view-item_H {
  display: inline-block;
  padding: 0px 8px;
  color: black;
  background: #fff;
}

.scroll-view_H .scroll-view-item_H.active {
  color: #ff4500;
}

.nav_left {
  display: inline-block;
  width: 25%;
  height: 100%;
  background: white;
  text-align: center;
}

.nav_left .nav_left_items {
  height: 20px;
  line-height: 20px;
  padding: 4px 0;
  border-bottom: 1px solid rgba(255, 69, 0, 1);
  color: #444;
  font-size: 14px;
  text-overflow: ellipsis;
}

.nav_left .nav_left_items.active {
  background: #ff4500;
  color: white;
}

.nav_right {
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  overflow: scroll;
  padding: 2px;
  padding-top: 38px;
  background: #fff;
  box-sizing: border-box;
  border-left: 1px solid rgba(255, 69, 0, 0.6);
}

.right-container {
  padding-top: 8px;
}

.nav_right .nav_right_items {
  float: left;
  width: 33.33%;
  height: 120px;
  text-align: center;
}

.nav_right .nav_right_items image {
  width: 75px;
  height: 60px;
}

.nav_right .nav_right_items text {
  display: block;
  font-size: 10px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #222;
}

.empty-container {
  margin-top: 20%;
}
