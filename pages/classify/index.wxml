<scroll-view class="scroll-view_H" scroll-x='true' style="width: 100%">
  <block wx:for="{{navTopItems}}" wx:key="id">
    <view class="scroll-view-item_H {{params.cid1 == item.id ? 'active' : ''}}" bindtap="switchLevel1" data-index="{{index}}" data-id="{{item.id}}">{{item.name}}</view>
  </block>
</scroll-view>
<view class="container">
  <view class="nav_left">
    <block wx:for="{{navLeftItems}}" wx:key="id">
      <view class="nav_left_items {{params.cid2 == item.id ? 'active' : ''}}" bindtap="switchLevel2" data-index="{{index}}" data-id="{{item.id}}">{{item.name}}</view>
    </block>
  </view>
  <view class="nav_right">
    <view wx:if="{{navRightItems&&navRightItems.length>0}}">
      <block wx:for="{{navRightItems}}" wx:key="id">
        <view class="nav_right_items">
          <navigator bindtap="navigateTo" data-id="{{ item.id }}">
            <view>
              <block wx:if="{{item.thumb}}">
                <image src="{{img_host+item.thumb}}"></image>
              </block>
              <block wx:else>
                <image src="http://temp.im/50x30"></image>
              </block>
            </view>
            <view wx:if="{{item.name}}">
              <text>{{item.name}}</text>
            </view>
            <view wx:else>
              <text>{{item.place}}</text>
            </view>
          </navigator>
        </view>
      </block>
    </view>
    <view wx:else>
      <view class="prompt-message empty-container">
        <image src="{{ prompt.icon || '../../assets/images/iconfont-empty.png' }}" class="prompt-icon" />
        <view class="prompt-title">{{ prompt.title || '空空如也' }}</view>
        <view class="prompt-text">{{ prompt.text || '暂时没有相关数据' }}</view>
      </view>
    </view>
  </view>
</view>