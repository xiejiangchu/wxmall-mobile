.container{
  padding-top: 10px;
  padding-bottom: 80px;
}
.weui-panel__hd{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.info-meta {
  padding-right: 1em;
}

.weui-media-box__bd_in-appmsg {
  position: relative;
}

.weui-cell_active {
  background-color: #fff;
}

.weui-media-box__info{
  margin-top: 4px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.quantity-wrapper {
  position: absolute;
  top: 30%;
  right: 0;
  bottom:0;
  background-color: #fff;
}

.quantity-wrapper .customize-qua {
  width: 84px;
  height: 24px;
  box-sizing: border-box;
}

.quantity-decrease, .quantity-increase, .quantity {
  display: inline-block;
  position: relative;
  width: 25px;
  height: 100%;
  border: 1px solid transparent;
  border-radius: 4px;
  border-color: #ccc;
  box-sizing: border-box;
}

.quantity {
  -webkit-appearance: none;
  text-align: center;
  width: 34px;
  vertical-align: top;
  font-size: 14px;
  line-height: 24px;
  color: #232326;
  min-height: 0;
}

.quantity-decrease {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  margin-left: 0;
}

.quantity-decrease:before, .quantity-increase:before {
  content: "";
  position: absolute;
  top: 11px;
  left: 6px;
  width: 12px;
  height: 1px;
  background-color: #ccc;
}

.quantity-increase {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  margin-left: -1px;
}

.quantity-increase:after {
  content: "";
  position: absolute;
  top: 6px;
  left: 11px;
  width: 1px;
  height: 12px;
  background-color: #ccc;
}

.quantity {
  border-radius: 0;
  margin-left: -1px;
}

.check-btn-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-flow: row;
  height: 48px;
  font-size: 16px;
  background: white;
}

.check-btn-area .check-total {
  flex: 2;
  display: flex;
  align-content: center;
  justify-content: flex-start;
  text-align: center;
  height: 48px;
  padding: 0 5px;
  line-height: 48px;
}

.check-btn-area .btn {
  flex: 1;
  display: flex;
  align-content: center;
  justify-content: center;
  height: 48px;
  line-height: 48px;
  margin: 0;
  padding: 0px;
  color: white;
}
