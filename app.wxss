}
.color-yellow {
  color: #ffffcc;
}

.bg-white{
  background: white;
}
.bg-red {
  background: #dd0000;
}

.bg-gray {
  background: darkgray;
}

.bg-green {
  background: limegreen;
}

.bg-primary {
  background: #479de6;
}
.bg-yellow {
  background: #ffffcc;
}
.bg-orange{
