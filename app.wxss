/**app.wxss**/
@import "./style/layout.wxss";

.container {
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

page {
  background-color: #f2f2f2;
}

.text-unit-container {
  padding: 0rpx;
  height: 36rpx;
}

.text-unit {
  text-decoration: line-through;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  border-radius: 15rpx;
  color: darkgray;
}

.text-unit-shop {
  font-size: 20rpx;
  height: 36rpx;
  padding: 2rpx 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 15rpx;
  white-space: nowrap;
}

.weui-media-box {
  padding: 20rpx;
  position: relative;
}

.color-red {
  color: #dd0000;
}

.color-gray {
  color: darkgray;
}

.color-green {
